<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="icon" href="/static/img/favicon.ico" sizes="any"><!-- 32×32 -->
    <link rel="icon" href="/static/img/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/static/img/apple-touch-icon.png"><!-- 180×180 -->
    <link rel="manifest" href="/manifest.webmanifest">

    {# Code to track 11ty usage #}
    <meta name="generator" content="{{ eleventy.generator }}">

    {# Main css #}
    <link rel="stylesheet" href="{{ '/static/css/index.css' | url }}">

    {# Image gallery #}
    <link rel="stylesheet" href="/static/css/photoswipe.css">
    
  </head>
  <body>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>



<script type="module" src="/static/js/index.js"></script>
  </body>
</html>
